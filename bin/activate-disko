#!/usr/bin/env bash

DEVICE="${1:-vda}"

nix run                                          \
    --experimental-features 'nix-command flakes' \
    github:nix-community/disko                   \
    -- --mode destroy,format,mount               \
    --argstr device /dev/"$DEVICE"               \
    ./modules/traits/system/disko/os/disk-config.nix
